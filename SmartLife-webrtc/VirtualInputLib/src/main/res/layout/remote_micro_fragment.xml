<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/bg_b_15_round_12">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/micro_state_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="102dp"
                        android:src="@drawable/icon_micro_off" />
                    <TextView
                        android:id="@+id/tv_micro_tip"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/micro_state_img"
                        android:layout_marginTop="48dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="开启后对着手机说话电视会将声音扩大播放"
                        android:textColor="#ffffffff"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:id="@+id/button_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_micro_tip"
                        android:layout_marginTop="71dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/volume_subtract_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/vi_control_volume_sub_selector" />

                        <ImageView
                            android:id="@+id/volume_add_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/vi_control_volume_add_selector" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_micro_switch"
                        android:layout_width="315dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/button_layout"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/bg_round_25_white_alpha10"
                        android:text="打开扩音器"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16"
                        style="?android:attr/borderlessButtonStyle"/>
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
</FrameLayout>