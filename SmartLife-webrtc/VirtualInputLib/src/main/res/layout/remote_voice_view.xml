<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/global_dialog_height">


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="315dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:ellipsize="end"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/tips_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tips_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="播放"
            android:textSize="@dimen/font_16"
            android:textColor="@color/color_white_40"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tips_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="打开主页"
            android:textSize="@dimen/font_18"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tips_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="湖南卫视"
            android:textSize="@dimen/font_18"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tips_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="播放周杰伦的歌"
            android:textSize="@dimen/font_18"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tips_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放周杰伦的歌"
            android:textSize="@dimen/font_18"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tips_tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放周杰伦的歌"
            android:textSize="@dimen/font_18"
            android:textColor="@color/color_white_40"
            android:visibility="gone"/>
    </LinearLayout>

    <com.coocaa.swaiotos.virtualinput.module.view.siriwave.SiriWaveView
        android:id="@+id/siriWaveView"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>