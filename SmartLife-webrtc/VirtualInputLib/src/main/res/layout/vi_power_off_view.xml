<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/global_dialog_height"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_dialog_b1">

    <LinearLayout
        android:id="@+id/power_off_top_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_power_off_tip" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/c_5"
            android:textSize="@dimen/s_4"
            android:text="电视关机后会断开WIFI连接所以不支持开机哦"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/power_off_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/b_3"/>

        <TextView
            android:id="@+id/power_off"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/b_9"
            android:textSize="@dimen/s_5"
            android:text="关机"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/b_3"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/c_3"
            android:textSize="@dimen/s_5"
            android:text="取消"
            />
    </LinearLayout>

</LinearLayout>