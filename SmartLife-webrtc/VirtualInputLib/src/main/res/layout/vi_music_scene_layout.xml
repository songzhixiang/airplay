<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/vi_music_content_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="@dimen/global_horizontal_margin_10"
        android:layout_marginRight="@dimen/global_horizontal_margin_10"
        android:background="@drawable/bg_music_scene">

        <ImageView
            android:id="@+id/music_circle_in"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:visibility="invisible"
            android:src="@drawable/bg_music_out_circle"/>

        <ImageView
            android:id="@+id/music_circle_out"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:visibility="invisible"
            android:src="@drawable/bg_music_out_circle"/>

        <ImageView
            android:id="@+id/music_pause_play_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/music_pause_icon" />

        <TextView
            android:id="@+id/tv_music_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_pause_play_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/global_button_height_50"
            android:text="点击播放背景音乐"
            android:textColor="@color/color_white_60" />

    </RelativeLayout>

</RelativeLayout>