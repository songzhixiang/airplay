<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.coocaa.swaiotos.virtualinput.module.view.TouchControlView
        android:id="@+id/live_touch_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/global_horizontal_margin_10"
        android:layout_marginRight="@dimen/global_horizontal_margin_10"
        android:layout_marginBottom="@dimen/global_horizontal_margin_10"
        android:background="@drawable/bg_round_12_black_alpha20">

        <ImageView
            android:id="@+id/icon_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_live_about" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <View
                android:id="@+id/upper_part"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/lower_part"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/live_list_layout"
            android:layout_width="101dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round_15_white_alpha5"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_live_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_live_list" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="频道列表"
                android:textColor="@color/color_white_80"
                android:textSize="@dimen/font_14" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/global_horizontal_margin_20"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/volume_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="音量控制"
                android:textColor="@color/color_white_40"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_voluem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/volume_tips"
                android:text=""
                android:textColor="@color/color_white_40"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/volume_subtract_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/vi_control_volume_sub_selector" />

                <ImageView
                    android:id="@+id/volume_add_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vi_control_volume_add_selector" />
            </LinearLayout>

            <TextView
                android:id="@+id/mute_img"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_round_25_white_alpha10"
                android:gravity="center"
                android:text="静音"
                android:textColor="@color/color_white_80"
                android:textSize="@dimen/font_12" />

        </RelativeLayout>

    </com.coocaa.swaiotos.virtualinput.module.view.TouchControlView>

</RelativeLayout>