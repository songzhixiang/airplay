<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bar_layout"
        android:layout_width="@dimen/toolbar_width"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:orientation="vertical"
        android:paddingStart="@dimen/toolbar_padding_start"
        android:gravity="center_vertical">

        <ImageView
            android:id="@id/whiteboard_toolbar_paint"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:src="@drawable/selector_tool_paint" />

        <ImageView
            android:id="@id/whiteboard_toolbar_eraser"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:src="@drawable/selector_tool_eraser" />

        <ImageView
            android:id="@id/whiteboard_toolbar_more"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:src="@drawable/selector_tool_more" />

    </LinearLayout>

    <com.coocaa.whiteboard.ui.toollayer.tvcontroller.TvControllerView
        android:id="@id/whiteboard_tv_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/whiteboard_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_whiteboard_ui_exit"/>
</FrameLayout>