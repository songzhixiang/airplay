<?xml version="1.0" encoding="utf-8"?>
        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff2f2f2"
            >
            <RelativeLayout
                android:id="@+id/banner_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#fff"
                >
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/banner_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_10"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/bg_banner_index"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/banner_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="15dp"
                android:background="#fff"
                >
                <TextView
                    android:id="@+id/discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#FF5B55"
                    android:text="¥1025"
                    android:textSize="@dimen/font_28"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/discount_price"
                    android:layout_alignBaseline="@id/discount_price"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#66000000"
                    android:text="¥12200"
                    android:textSize="@dimen/font_14"/>

                <TextView
                    android:id="@+id/favorable_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignBaseline="@id/discount_price"
                    android:textColor="#FF5B55"
                    android:text="99.8%"
                    android:textSize="@dimen/font_12"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/favorable_rate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/favorable_rate"
                    android:layout_marginRight="4dp"
                    android:layout_alignBaseline="@id/discount_price"
                    android:textColor="#9000"
                    android:text="好评率"
                    android:visibility="gone"
                    android:textSize="@dimen/font_12"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/discount_price"
                    android:textColor="#000"
                    android:text="商品"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/font_18"/>
                <TextView
                    android:id="@+id/title_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/title"
                    android:textColor="#9000"
                    android:text="商品"
                    android:textSize="@dimen/font_12"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/freight_charge_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/info_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                >
                <TextView
                    android:id="@+id/freight_charge_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#6000"
                    android:text="运费"
                    android:textSize="@dimen/font_14"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/freight_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/freight_charge_label"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000"
                    android:text="满 99元免邮费"
                    android:textSize="@dimen/font_14"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/type_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/freight_charge_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:background="#fff"

                >
                <TextView
                    android:id="@+id/type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#6000"
                    android:text="已选"
                    android:textSize="@dimen/font_14"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/type_label"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000"
                    android:text="创维智慧屏 65寸 65寸 x1"
                    android:textSize="@dimen/font_14"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/bt_type_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/detail_set_click_selector"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/type_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#fff"
                android:clickable="true"
                >
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#0d000000"
                    android:layout_marginLeft="58dp"
                    />
                <TextView
                    android:id="@+id/address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#6000"
                    android:text="送至"
                    android:textSize="@dimen/font_14"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bt_address_set0"
                    android:layout_marginLeft="3dp"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="@dimen/font_14"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/bt_address_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/detail_set_click_selector"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/bt_address_set0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="58dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/detail_address_click_selector"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/address_layout"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="- 商品详情 -"
                    android:textSize="@dimen/font_14"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

