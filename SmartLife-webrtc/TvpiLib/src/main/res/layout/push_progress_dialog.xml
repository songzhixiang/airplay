<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/connect_dismiss_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="54dp"
    android:background="@drawable/bg_push_dialog"
    android:gravity="center_horizontal">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/push_state_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@drawable/icon_push_error" />

        <com.coocaa.tvpi.view.CirclePercentView
            android:id="@+id/pushing_state_loading"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_push_state"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/push_state_img"
            android:text="共享中，请稍等..."
            android:textColor="#cc000000"
            android:textSize="16sp" />


    </RelativeLayout>
</LinearLayout>