<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_item_contacts">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivCover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/yunxin_icon_user_cover_gray"
        app:riv_corner_radius="25dp" />

    <ImageView
        android:id="@+id/ivOnlineFlag"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/yunxin_icon_flag_contacts_normal"
        android:layout_alignBottom="@id/ivCover"
        android:layout_alignEnd="@id/ivCover"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/ivCover"
        android:layout_toStartOf="@id/ivHomeMonitor"
        android:maxEms="7"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""
        android:textColor="@color/c_2"
        android:textSize="@dimen/s_4" />

    <TextView
        android:id="@+id/tvRegisterCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tvName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="222"
        android:textColor="@color/c_4"
        android:textSize="@dimen/s_2" />

    <ImageView
        android:id="@+id/ivHomeMonitor"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/home_moinitor_contacts"
        android:visibility="visible"
        android:layout_toStartOf="@id/ivVideoCall"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/ivVideoCall"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/yunxin_icon_item_video_call" />

</RelativeLayout>


