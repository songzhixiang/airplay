<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="@dimen/global_horizontal_margin_20"
    android:layout_marginBottom="@dimen/global_horizontal_margin_20"
    android:background="@drawable/bg_white_round_12"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/lab_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/global_horizontal_margin_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/lab_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/color_black_a80"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tv_lab_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lab_name"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:textColor="@color/color_black_a60"
            android:textSize="@dimen/font_12" />

    </LinearLayout>

</RelativeLayout>