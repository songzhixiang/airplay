<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/global_horizontal_margin_20"
    android:paddingRight="@dimen/global_horizontal_margin_20">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/global_horizontal_margin_20">

            <LinearLayout
                android:id="@+id/ll_long_video_director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/long_video_director_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="导演"
                    android:textColor="@color/c_2"
                    android:textSize="@dimen/s_3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/long_video_director_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_horizontal_margin_10"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/c_3"
                    android:textSize="@dimen/s_3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_long_video_actor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/long_video_actor_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="演员"
                    android:textColor="@color/c_2"
                    android:textSize="@dimen/s_3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/long_video_actor_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_horizontal_margin_10"
                    android:layout_marginBottom="@dimen/global_horizontal_margin_10"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/c_3"
                    android:textSize="@dimen/s_3" />
            </LinearLayout>

            <TextView
                android:id="@+id/long_video_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text=""
                android:textColor="@color/c_3"
                android:textSize="@dimen/s_4" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>