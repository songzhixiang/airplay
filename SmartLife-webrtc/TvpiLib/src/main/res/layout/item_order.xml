<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/global_horizontal_margin_15"
    android:layout_marginLeft="@dimen/global_horizontal_margin_15"
    android:layout_marginRight="@dimen/global_horizontal_margin_15"
    android:background="@drawable/bg_b_1_round_6">

    <TextView
        android:id="@+id/item_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号：10254988"
        android:textColor="@color/c_1"
        android:textSize="@dimen/font_14"
        />

    <TextView
        android:id="@+id/item_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="待付款"
        android:textColor="@color/color_red"
        android:textSize="@dimen/font_14"
        />

    <ImageView
        android:id="@+id/item_order_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/item_order_no"
        />

    <TextView
        android:id="@+id/item_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="60dp"
        android:layout_alignTop="@id/item_order_icon"
        android:layout_toRightOf="@id/item_order_icon"
        android:text="商品名称"
        android:textColor="@color/c_1"
        android:textSize="@dimen/font_14"
        />

    <TextView
        android:id="@+id/item_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_order_icon"
        android:text="¥299"
        android:textColor="@color/c_1_80"
        android:textSize="@dimen/font_14"
        />

    <TextView
        android:id="@+id/item_order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_alignLeft="@id/item_order_name"
        android:layout_below="@id/item_order_name"
        android:text="65寸；白色"
        android:textColor="@color/c_1_50"
        android:textSize="@dimen/font_14"
        />

    <TextView
        android:id="@+id/item_order_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_order_type"
        android:text="x2"
        android:textColor="@color/c_1_80"
        android:textSize="@dimen/font_14"
        />

    <LinearLayout
        android:id="@+id/item_order_total_price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_order_icon"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_order_total_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付金额："
            android:textColor="@color/c_1"
            android:textSize="@dimen/font_14"
            />
        <TextView
            android:id="@+id/item_order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥598"
            android:textColor="@color/c_1"
            android:textSize="@dimen/font_16"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/item_order_confirm"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/item_order_total_price_layout"
        android:background="@drawable/bg_order_red_round_15"
        android:textColor="@color/color_red"
        android:textSize="@dimen/font_14"
        android:text="立即付款"/>

    <TextView
        android:id="@+id/item_order_cancel"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignTop="@id/item_order_confirm"
        android:layout_toLeftOf="@id/item_order_confirm"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_order_black_round_15"
        android:textColor="@color/black_80"
        android:textSize="@dimen/font_14"
        android:text="取消订单"/>

</RelativeLayout>