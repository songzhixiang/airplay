<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gary_mine">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/global_horizontal_margin_10"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="关于"
            android:textColor="#cc000000"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/icon_about_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="共享屏"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:textSize="21sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_version_code"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Version 2.0.1 "
        android:textColor="#cc000000"
        android:layout_marginTop="@dimen/global_horizontal_margin_5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_40"
        android:textSize="16sp"
        />

        <RelativeLayout
            android:id="@+id/setting_rl_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_row_height_60"
            android:layout_marginStart="@dimen/global_horizontal_margin_20"
            android:layout_marginEnd="@dimen/global_horizontal_margin_20"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_mine_rl_up">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/global_horizontal_margin_20"
                android:text="版本更新"
                android:textColor="@color/c_1"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:id="@+id/version_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="39dp"
                android:visibility="visible"
                android:text=""
                android:textColor="#66000000"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_update"
                android:layout_width="72dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_update"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/iv_arrow" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/global_horizontal_margin_10"
                android:src="@drawable/icon_mine_in"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_func_des_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_row_height_80"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/global_horizontal_margin_20"
                android:text="功能说明"
                android:textColor="@color/c_1"
                android:textSize="@dimen/s_5"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/global_horizontal_margin_20"
                android:src="@drawable/icon_arrow_right"/>
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_row_height_60"
        android:layout_marginStart="@dimen/global_horizontal_margin_20"
        android:layout_marginEnd="@dimen/global_horizontal_margin_20"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_mine_rl_middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/global_horizontal_margin_20"
            android:text="联系我们"
            android:textColor="@color/c_1"
            android:textSize="@dimen/font_16"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/global_horizontal_margin_10"
            android:src="@drawable/icon_mine_in"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_share_app"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_row_height_60"
        android:layout_marginStart="@dimen/global_horizontal_margin_20"
        android:layout_marginEnd="@dimen/global_horizontal_margin_20"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_mine_rl_down">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/global_horizontal_margin_20"
            android:text="分享"
            android:textColor="@color/c_1"
            android:textSize="@dimen/font_16"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/global_horizontal_margin_10"
            android:src="@drawable/icon_mine_in"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_row_height_80"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/global_horizontal_margin_20"
            android:src="@drawable/icon_arrow_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/global_horizontal_margin_20"
            android:text="服务协议"
            android:textColor="@color/c_1"
            android:textSize="@dimen/s_5" />
    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="《隐私条款》"
            android:textSize="@dimen/font_12"
            android:textColor="#FF5A7095"/>

        <TextView
            android:id="@+id/tv_about_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="《用户协议》"
            android:textSize="@dimen/font_12"
            android:textColor="#FF5A7095"/>

        <TextView
            android:id="@+id/setting_about_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="酷开公司 版权所有"
            android:textColor="#33000000"
            android:textSize="@dimen/font_12"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Copyright © 2020 SmartLife All Rights Reserved."
            android:textColor="#33000000"
            android:textSize="@dimen/font_12"/>
    </LinearLayout>

</LinearLayout>