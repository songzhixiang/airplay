<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mall_quick_start_dismiss_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mall_quick_start_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingBottom="@dimen/activity_margin_start"
        android:background="@drawable/bg_top_dialog"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/global_horizontal_margin_15"
                android:textSize="@dimen/font_20"
                android:textColor="@color/c_1"
                android:textStyle="bold"
                android:text="功能直达"/>

            <ImageView
                android:id="@+id/quick_start_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/global_horizontal_margin_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_close"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/global_horizontal_margin_15"
            android:paddingRight="@dimen/global_horizontal_margin_15"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/quick_start_scan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_b_1_round_6">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_quick_scan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/c_1_80"
                    android:textSize="@dimen/font_14"
                    android:text="扫一扫"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/quick_start_order"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_b_1_round_6">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_quick_order"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/c_1_80"
                    android:textSize="@dimen/font_14"
                    android:text="订单"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/quick_start_address"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_b_1_round_6">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_quick_address"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/c_1_80"
                    android:textSize="@dimen/font_14"
                    android:text="收货地址"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/quick_start_service"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_b_1_round_6">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_quick_service"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/c_1_80"
                    android:textSize="@dimen/font_14"
                    android:text="客服"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>