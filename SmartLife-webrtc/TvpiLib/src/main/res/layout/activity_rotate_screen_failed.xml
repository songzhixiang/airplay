<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="39dp"
    android:layout_marginRight="39dp"
    android:background="@drawable/bg_dlna_t_dialog"
    android:minWidth="330dp"
    android:minHeight="190dp"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/dialog_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="63dp"
        android:paddingBottom="40dp"
        android:text="tips"
        android:textColor="@color/colorText_3c3c3c"
        android:textSize="@dimen/font_17"/>


    <!-- right btn-->
    <com.coocaa.tvpi.view.STextView
        android:id="@+id/stv_confirm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:gravity="center"
        android:background="@drawable/bg_b_8_round_8"
        android:ellipsize="end"
        android:text="确定"
        android:textColor="#333333"
        android:textSize="@dimen/font_17"/>

</LinearLayout>