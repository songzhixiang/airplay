<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/cl_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_contacts">

    <ImageView
        android:id="@+id/iv_contacts_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:src="@drawable/yunxin_icon_user_cover_gray"/>

    <ImageView
        android:id="@+id/iv_contacts_type"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintRight_toRightOf="@+id/iv_contacts_cover"
        app:layout_constraintBottom_toBottomOf="@+id/iv_contacts_cover"
        android:src="@drawable/yunxin_icon_flag_add_contacts"/>

    <TextView
        android:id="@+id/tv_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yunxin_add_friends"
        android:textSize="@dimen/s_4"
        android:textColor="@color/c_2"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_contacts_cover"/>

    <TextView
        android:id="@+id/tv_contacts_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yunxin_add_friends_method"
        android:textSize="@dimen/s_2"
        android:textColor="@color/c_4"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="@+id/tv_contacts_name"
        app:layout_constraintBottom_toBottomOf="parent"
      />


    <ImageView
        android:id="@+id/iv_contacts_status"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>