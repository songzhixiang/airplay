<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.coocaa.tvpi.view.DeletableEditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="搜索视频"
        android:textColorHint="@color/color_black_a30"
        android:textSize="@dimen/font_16"
        android:textColor="@color/color_black_a80"
        android:textCursorDrawable="@drawable/movie_search_edittext_cursor_shape"
        android:background="@drawable/movie_search_edittext_normal_bg"
        android:drawableLeft ="@drawable/movie_search"
        android:paddingEnd="12dp"
        android:layout_marginEnd="62dp"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:inputType="text"
        android:layout_marginStart="@dimen/activity_margin_start"/>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="62dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="取消"
        android:textSize="@dimen/font_16"
        android:textColor="@color/black_80"
        android:layout_alignParentEnd="true"/>

    <FrameLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/etSearch"/>

</RelativeLayout>