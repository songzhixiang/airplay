<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_album_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@color/b_3"
        app:riv_corner_radius="6dp"
        app:layout_constraintDimensionRatio="h,1:1"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/item_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_album_cover"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:maxWidth="180dp"
        android:textStyle="bold"
        android:textSize="@dimen/font_14"
        android:textColor="@color/color_black_a80"
       />

    <TextView
        android:id="@+id/item_album_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_album_name"
        android:maxLines="1"
        android:textSize="@dimen/font_14"
        android:textColor="@color/color_black_a40"
        />


</androidx.constraintlayout.widget.ConstraintLayout>