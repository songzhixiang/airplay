<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/album_preview_img"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="@dimen/global_horizontal_margin_5"
        android:layout_marginTop="@dimen/global_horizontal_margin_10"
        android:layout_marginEnd="@dimen/global_horizontal_margin_5"
        android:layout_marginBottom="@dimen/global_horizontal_margin_10"
        app:riv_corner_radius="5dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_video_preview_flag"
        android:layout_alignBottom="@id/album_preview_img"
        android:layout_alignStart="@id/album_preview_img" />

    <LinearLayout
        android:id="@+id/album_preview_ly"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="@dimen/global_horizontal_margin_5"
        android:layout_marginTop="@dimen/global_horizontal_margin_10"
        android:layout_marginEnd="@dimen/global_horizontal_margin_5"
        android:layout_marginBottom="@dimen/global_horizontal_margin_10"
        android:background="@drawable/picture_selector"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" />

</RelativeLayout>