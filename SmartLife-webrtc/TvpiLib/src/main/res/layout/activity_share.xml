<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_gray_top_round_18">

        <TextView
            android:id="@+id/screen_shot_share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="分享到"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_16" />

        <LinearLayout
            android:id="@+id/screen_shot_share_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/screen_shot_share_tv"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_share_weixin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:layout_marginBottom="@dimen/global_horizontal_margin_10"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_share_weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信好友"
                    android:textColor="@color/color_black_a80"
                    android:textSize="@dimen/s_2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share_weixin_circle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:layout_marginBottom="@dimen/global_horizontal_margin_10"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_share_weixin_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textColor="@color/color_black_a80"
                    android:textSize="@dimen/s_2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/global_horizontal_margin_10"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_share_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ好友"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s_2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share_qzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/global_horizontal_margin_10"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_share_qzone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ空间"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s_2" />

            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/bt_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_white_round_28"
            android:text="取消"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_16" />

    </RelativeLayout>
</RelativeLayout>
