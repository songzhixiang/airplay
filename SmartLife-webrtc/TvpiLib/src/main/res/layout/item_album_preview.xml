<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/album_preview_img"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginStart="@dimen/global_horizontal_margin_5"
        android:layout_marginEnd="@dimen/global_horizontal_margin_5"
        android:layout_marginTop="@dimen/global_horizontal_margin_10"
        android:layout_marginBottom="@dimen/global_horizontal_margin_10"
        app:riv_corner_radius="5dp"/>


    <LinearLayout
        android:id="@+id/album_preview_ly"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginStart="@dimen/global_horizontal_margin_5"
        android:layout_marginEnd="@dimen/global_horizontal_margin_5"
        android:layout_marginTop="@dimen/global_horizontal_margin_10"
        android:layout_marginBottom="@dimen/global_horizontal_margin_10"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="@drawable/picture_selector"
        android:orientation="horizontal" />

</RelativeLayout>