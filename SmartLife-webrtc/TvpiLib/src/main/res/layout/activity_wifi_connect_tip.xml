<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_top_10_round"
        android:layout_alignParentBottom="true">
        
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此功能需连接共享屏 Wi-Fi ，是否一键连接？"
            android:textSize="@dimen/font_18"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/color_black"/>
        
        <Button
            android:id="@+id/btConnect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="一键连接 Wi-Fi"
            android:textSize="@dimen/font_16"
            android:textAppearance="@dimen/font_16"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_blue_round_28"/>

        <Button
            android:id="@+id/btCancel"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="取消"
            android:textSize="@dimen/font_16"
            android:background="@drawable/bg_black_a5_round_28"
            android:textAppearance="@dimen/font_16"
            android:textColor="@color/color_black" />
        
    </LinearLayout>
    
</RelativeLayout>