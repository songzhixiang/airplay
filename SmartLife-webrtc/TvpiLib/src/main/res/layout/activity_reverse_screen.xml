<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_1">

    <com.coocaa.tvpi.module.reversescreen.ReverseScreenTextureView
        android:id="@+id/surface"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="w,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.coocaa.tvpi.module.reversescreen.view.ExitView
        android:id="@+id/tv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/reverse_exit_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/iv_c"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/icon_remote_key_c"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="@id/iv_menu"
        android:visibility="gone"/>

    <Button
        android:id="@+id/iv_back"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/reverse_back_icon"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@id/iv_home"
        app:layout_constraintEnd_toEndOf="@id/iv_menu" />

    <Button
        android:id="@+id/iv_home"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/color_black_a5"
        android:background="@drawable/reverse_home_icon"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@id/iv_menu"
        app:layout_constraintEnd_toEndOf="@id/iv_menu" />

    <Button
        android:id="@+id/iv_menu"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/reverse_menu_icon"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>