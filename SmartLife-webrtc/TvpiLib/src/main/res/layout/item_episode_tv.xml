<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/episode_item_ll"
    android:layout_width="54dp"
    android:layout_height="54dp"
    android:background="@drawable/movie_episode_bg">

    <ImageView
        android:id="@+id/ivVipFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/movie_vip_flag"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivPlaying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/movie_search_playing" />

        <TextView
            android:id="@+id/tvIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:text="第1集"
            android:textColor="@color/c_2"
            android:textSize="@dimen/s_4" />
    </LinearLayout>

</RelativeLayout>