<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b_2"
    android:clipChildren="false">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/app_detail_screenshot_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h,9:16"
        android:clipToPadding="false"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />

    <LinearLayout
        android:id="@+id/app_detail_screenshot_indicator_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_detail_screenshot_viewpager"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/app_detail_screenshot_viewpager"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" />


</androidx.constraintlayout.widget.ConstraintLayout>
