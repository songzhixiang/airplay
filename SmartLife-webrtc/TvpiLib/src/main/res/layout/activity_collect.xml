<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/b_2">
    
    <RelativeLayout
        android:id="@+id/collect_top_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/collect_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_horizontal_margin_10"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back_black"/>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/collect_magicindicator"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">
        </net.lucode.hackware.magicindicator.MagicIndicator>

        <TextView
            android:id="@+id/collect_right_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/global_horizontal_margin_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/c_3"
            android:textSize="@dimen/s_4"
            android:text="编辑"/>

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/collect_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/collect_top_layout"/>

</RelativeLayout>