<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_screen_saver_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/screen_saver_item_pic_height"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/item_screen_saver_img"
        android:background="@drawable/bg_screen_saver_round">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_dlna_push_to_tv_grey"/>
            <TextView
                android:id="@+id/screen_cast_perview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/screen_saver_item_text_padding"
                android:paddingTop="@dimen/screen_saver_item_text_margin"
                android:paddingBottom="@dimen/screen_saver_item_text_margin"
                android:text="@string/screen_push_pireview"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="@dimen/font_15"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="#cccccc"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_screen_saver_customized"/>

            <TextView
                android:id="@+id/screen_saver_customized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/screen_saver_item_text_padding"
                android:paddingTop="@dimen/screen_saver_item_text_margin"
                android:paddingBottom="@dimen/screen_saver_item_text_margin"
                android:text="@string/customies_screen_saver"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="@dimen/font_15"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>