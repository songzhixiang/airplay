<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/episode_item_ll"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/bg_episode_item_rect_normal">
        <TextView
            android:id="@+id/episode_index_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第1集"
            android:textColor="@color/c_2"
            android:textSize="@dimen/s_4"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/episode_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/episode_index_tv"
            android:text="当前剧集标题"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/c_3"
            android:textSize="@dimen/s_1"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/episode_movie_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="标题"
            android:textColor="@color/c_3"
            android:textSize="@dimen/s_4"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp" />
    </RelativeLayout>


</LinearLayout>