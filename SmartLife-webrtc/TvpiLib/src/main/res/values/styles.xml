<resources>

    <style name="Theme.FloatDotGuide" parent="AppTheme.NoActionBar.Fullscreen.translucent"></style>

    <style name="Theme.ConnectDialogActivity" parent="Theme.DialogActivity"></style>

    <style name="SmartBrowserClipboardDialog" parent="Theme.DialogActivity">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="SmartBrowserBottomDeleteDialog" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <!--        //Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--        //是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--        //是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--        //是否显示title-->
        <item name="android:windowNoTitle">false</item>
        <!--        //设置dialog的背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--        //显示区域背景是否透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--        就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，-->
        <!--        dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <!--        <item name="android:backgroundDimAmount">0.5</item>-->
        <!--        //显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>